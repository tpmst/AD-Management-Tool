<Window x:Class="ADTool.Views.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Domain input" Height="200" Width="300">
    <Grid>
        <TextBlock x:Name="TextBlockMessage" TextWrapping="Wrap" Margin="10"/>
        <TextBox x:Name="TextBoxInput" VerticalAlignment="Bottom" Margin="10"/>
        <Button Content="OK" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Width="75" Height="30" Click="ButtonOK_Click"/>
    </Grid>
</Window>
